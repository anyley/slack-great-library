<div id="item_<%= item.id %>" class="item">
  <div>
    <%= image_tag image_item_path(item), class: 'item_image' %>
  </div>

  <div class="info">
    <table>
      <tr>
        <td class="row_title cell">
        </td>
        <td class="cell">
          <span class="item-title"> <%= item.description %> </span>
        </td>
      </tr>
      <tr>
        <td class="row_title cell"></td>
        <td class="cell">
          <i> (<%= item.itemtype %>) </i>
        </td>
      </tr>
      <tr>
        <td class="row_title cell">
          <strong> URL: </strong>
        </td>
        <td class="cell">
          <a href="<%= item.url %>"> <%= item.url %> </a>
        </td>
      </tr>
      <tr>
        <td class="row_title cell"><strong>Цена:</strong></td>
        <td class="cell">
          <%= item.price %>
          <% if item.claimers.size > 0 %>
              (по $<%= (item.price.to_f / (item.claimers.size.to_f)).ceil.to_i %> с каждого)
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="row_title cell">
          <strong> Предложил: </strong>
        </td>
        <td class="cell">
          <% if item.offered_user %>
            <%= link_to item.offered_user.name, item.offered_user %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="row_title cell">
          <strong> Новые заявки: </strong>
        </td>
        <% if item.claimers.size - item.purchase_users.size > 0 %>
            <td class="cell">
              <%= item.claimers.size - item.purchase_users.size %> чел
              (<%= map_link_to (item.claimers - item.purchase_users), :name %>)
            </td>
        <% else %>
            <td class="cell">
              <span style="color: red"> нет желающих </span>
            </td>
        <% end %>
      </tr>
      <tr>
        <td class="row_title cell">
          <strong> Скинулись: </strong>
        </td>
        <% if item.purchase_users.size > 0 %>
            <td class="cell">
              <%= item.purchase_users.size %> чел (<%= map_link_to item.purchase_users, :name %>)
            </td>
        <% else %>
            <td class="cell">
              <span style="color: red"> не скидывались </span>
            </td>
        <% end %>
      </tr>
      <tr>
        <td class="row_title cell">
          <strong>
            <% case item.users.size %>
            <% when 0, 1 %>
                Владелец:
            <% else %>
                Владельцы:
            <% end %>
          </strong>
        </td>
        <td class="cell">
          <% if item.users.size == 0 %>
              <span style="color: red"> никто не покупал </span>
          <% else %>
              <%= map_link_to item.users, :name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="row_title cell">
        </td>
        <td class="cell">
          <% if item.purchase_users.exists? current_user.id %>
              <div class="btn btn-success btn-medium disabled"> Приобретено </div>
          <% else %>
              <% if item.claimers.exists? current_user.id %>
                  <%= link_to 'Отозвать заявку', unclaim_item_path(item),
                              class:  'btn btn-danger btn-medium',
                              remote: true
                  %>
              <% else %>
                  <%= link_to 'Подать заявку', claim_item_path(item),
                              class:  'btn btn-primary btn-medium',
                              remote: true
                  %>
              <% end %>
          <% end %>

          <%= link_to 'Начать сбор денег', start_crowdfunding_path(item),
                      class:  'btn btn-primary btn-medium',
                      remote: true
          %>

          <% if item.users.exists? current_user && (item.claimers - item.purchase_users).size > 0 %>
              <div class="btn-group">
                <button type="button" class="btn btn-primary btn-medium dropdown-toggle" data-toggle="dropdown">
                  Принять деньги от... <span class="caret"></span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <% (item.claimers - item.purchase_users).each do |user| %>
                      <li> <%= link_to user.name, change_user_path(user.id) %> </li>
                  <% end %>
                </ul>
              </div>
          <% end %>
        </td>
      </tr>
    </table>
  </div>

  <%= yield(item) if block_given? %>

</div>