<p id="notice"><%= notice %></p>

<h1> Покупки </h1>

<p>
  <%= link_to 'New Item', new_item_path %>
</p>

<% @items.each do |item| %>
    <%= render 'item', item: item do %>
        <div class="edit_back_btn_block">
          <%= link_to 'Show', item %> |
          <%= link_to 'Edit', edit_item_path(item) %> |
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
    <% end %>
<% end %>
